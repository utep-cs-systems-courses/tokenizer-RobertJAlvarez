# for convenience, define variable $(OBJS) to list of object files
CC   = cc
OBJS = history.o tokenizer.o

# compiler flags. -g for debug, -O3 for optimization, -W* for warnings
CFLAGS = -O3 -g3 -Wall -Wextra -Werror=format-security -Werror=implicit-function-declaration \
         -Wshadow -Wpointer-arith -Wcast-align -Wstrict-prototypes -Wwrite-strings \
         -Waggregate-return -Wcast-qual -Wunreachable-code

# first target is built by default
all: run_tokenizer tester

# run_tokenizer (target) depends on all object files (prerequisites)
run_tokenizer: $(OBJS) uimain.o
	${CC} $(CFLAGS) -o $@ $^

tester: $(OBJS) my_tester.o
	${CC} $(CFLAGS) -o $@ $^

# deletes files generated by compilation
clean:
	rm -f *.o run_tokenizer tester

run: run_tokenizer
	./run_tokenizer

tokenizer.o: tokenizer.c tokenizer.h
history.o : history.c history.h
uimain.o: uimain.c history.h tokenizer.h
my_tester.o: my_tester.c tokenizer.h history.h

